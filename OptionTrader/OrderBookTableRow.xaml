<UserControl x:Class="OptionTrader.OrderBookTableRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="OrderBookTableRowN"
             d:DesignHeight="300" d:DesignWidth="300">
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*" />
                <ColumnDefinition Width="112*" />
                <ColumnDefinition Width="75*" />
                <ColumnDefinition Width="75*" />
            </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            
        <Label Background="LightGray" FontSize="10pt" Margin="6,0">---</Label>
        <Label Grid.Column="1" Grid.Row="0" Background="Yellow" FontSize="10pt" x:Name="exchange">PHLX</Label>
        <Label Grid.Column="2" Grid.Row="0" Background="Yellow" FontSize="10pt" x:Name="price">0.66</Label>
        <Label Grid.Column="3" Grid.Row="0" Background="Yellow" FontSize="10pt" x:Name="volume">400</Label>
    </Grid>
</UserControl>
